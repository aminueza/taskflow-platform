# Example .env file
# Copy this to .env and fill in your values
# Or run: bash scripts/generate-secrets.sh

# Database Configuration
POSTGRES_DB=webapp_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Rails Configuration
RAILS_ENV=development
RAILS_MASTER_KEY=your_rails_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# Database URLs
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/webapp_development
TEST_DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/webapp_test

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# Docker Compose Project
COMPOSE_PROJECT_NAME=webapp-stack
